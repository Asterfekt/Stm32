#include "A988.h"


void step(STEP_Mode mode,stepDelay speed)
{
	if(mode==STEP)
	{
					HAL_GPIO_WritePin(STEP_GPIO_Port,STEP_Pin, GPIO_PIN_SET);
			        microDelay(speed);
			        HAL_GPIO_WritePin(STEP_GPIO_Port, STEP_Pin, GPIO_PIN_RESET);
			        microDelay(speed);
	}

	else if(mode==NOSTEP)
	{

	}
}
