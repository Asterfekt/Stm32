#ifndef INC_A988_H_
#define INC_A988_H_

#pragma once

#include "stm32f4xx.h"

typedef enum
{
	NOSTEP = 1,
	STEP = 0,
}STEP_Mode;

typedef enum
{
	FIRST_DIRECTION= 0,
	SECOND_DIRICETION= 1,
}DIR_Mode;

typedef enum
{
	NOSLEEP= 0,
	SLEEP= 1,
}SLEEP_Mode;


//Function prototype
void step(STEP_Mode mode);
void dir(DIR_Mode dir);
void sleep(SLEEP_Mode sleep);


#endif /* INC_A988_H_ */
