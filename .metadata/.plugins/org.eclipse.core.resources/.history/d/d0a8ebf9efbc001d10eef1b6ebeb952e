#ifndef INC_A988_H_
#define INC_A988_H_

#pragma once

#include "stm32f4xx.h"

typedef enum
{
	NOSTEP = 0,
	STEP = 1,
}STEP_Mode;

typedef enum
{
	FIRST_DIRECTION= 0,
	SECOND_DIRICETION= 1,
}DIR_Mode;

typedef enum
{
	NOSLEEP= 0,
	SLEEP= 1,
}SLEEP_Mode;

typedef enum
{	SLOW_SPEED=2000,
	MEDIUM_SPEED= 1500,
	FAST_SPEED= 1000,
}stepDelay;

//Function prototype
void step(STEP_Mode);
void dir(DIR_Mode);
void sleep(SLEEP_Mode);


#endif /* INC_A988_H_ */
